<div id="<%= dom_id product %>" class="bg-white shadow-xl rounded-[30px] p-8 border border-orange-100 max-w-2xl mx-auto relative overflow-hidden my-8">
  
  <%# Efeito de fundo decorativo (uma mancha laranja suave no canto) %>
  <div class="absolute top-0 right-0 -mr-16 -mt-16 w-40 h-40 bg-orange-100 rounded-full blur-3xl opacity-50 pointer-events-none"></div>

  <%# Cabeçalho: Nome e Preço lado a lado %>
  <div class="flex flex-col sm:flex-row justify-between items-start mb-6 relative z-10 gap-4">
    <div>
      <h2 class="text-3xl font-extrabold text-stone-800 tracking-tight leading-tight">
        <%= product.nome %>
      </h2>
      
      <%# Badge de Disponibilidade %>
      <div class="mt-3 inline-flex items-center px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wide <%= product.disponivel? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
        <span class="w-2 h-2 rounded-full mr-2 <%= product.disponivel? ? 'bg-green-500' : 'bg-red-500' %>"></span>
        <%= product.disponivel? ? "Disponível" : "Indisponível" %>
      </div>
    </div>

    <div class="text-left sm:text-right bg-orange-50 sm:bg-transparent p-3 sm:p-0 rounded-lg sm:rounded-none w-full sm:w-auto">
      <span class="block text-xs font-bold text-orange-400 uppercase tracking-wider mb-1">Valor Unitário</span>
      <span class="text-4xl font-bold text-orange-600 block">
        <%= number_to_currency(product.preco) %>
      </span>
    </div>
  </div>

  <hr class="border-dashed border-orange-200 my-6">

  <%# Descrição %>
  <div class="relative z-10">
    <strong class="block text-sm font-bold text-stone-400 uppercase tracking-wider mb-3 flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25H12" />
      </svg>
      Detalhes do Sabor
    </strong>
    
    <p class="text-lg text-stone-600 leading-relaxed font-light">
      <% if product.descricao.present? %>
        <%= product.descricao %>
      <% else %>
        <span class="italic text-stone-400">Nenhuma descrição informada para este pão de queijo.</span>
      <% end %>
    </p>
  </div>

</div>
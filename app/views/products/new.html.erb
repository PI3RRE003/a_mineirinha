<% content_for :title, "Novo Pão de Queijo" %>
<div 
  class="fixed inset-0 -z-10  bg-repeat"
  style="background-image: url('<%= asset_path('Background.png') %>'); background-size: 300px;"
>
</div>
<div class="mx-auto md:w-2/3 w-full py-6">
  
  <%# Cabeçalho com Ícone %>
  <div class="flex items-center gap-4 mb-8 bg-amber-100 p-4 rounded-xl">
    <div class="p-3 bg-orange-100 rounded-2xl text-[#32491E] shadow-sm">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
    </div>
    <div>
      <h1 class="font-bold text-4xl text-[#32491E] tracking-tight">Novo Produto</h1>
      <p class="text-stone-500 mt-1">Adicione uma nova delícia ao cardápio.</p>
    </div>
  </div>

  <%# Card do Formulário %>
  <div class="bg-amber-100 shadow-xl rounded-[30px] p-8 border border-orange-100 relative overflow-hidden">
    
    <%# Elemento decorativo de fundo (canto superior direito) %>
    <div class="absolute top-0 right-0 -mr-10 -mt-10 w-32 h-32 bg-amber-50 rounded-full blur-2xl opacity-60 pointer-events-none"></div>

    <div class="relative z-10">
      <%= render "form", product: @product %>
    </div>
  </div>

  <%# Botão de Voltar (Centralizado e discreto abaixo do form) %>
  <div class="mt-8 text-center">
    <%= link_to products_path, class: "group inline-flex items-center gap-2 text-[#32491E] bg-amber-100 p-4 rounded-xl font-medium transition-colors duration-200" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 group-hover:-translate-x-1 transition-transform">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
      <span>Cancelar e voltar para a vitrine</span>
    <% end %>
  </div>

</div>
<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl text-orange-800 mb-8">Finalizar Pedido</h1>

  <%# Card de Resumo do Produto (Aparece se um produto foi selecionado) %>
  <% if @product %>
    <div class="bg-orange-50 border border-orange-200 rounded-lg p-6 mb-8 flex flex-col sm:flex-row justify-between items-center shadow-sm">
      <div>
        <span class="text-sm text-orange-600 font-bold uppercase tracking-wide">Você está comprando:</span>
        <h2 class="text-2xl font-bold text-gray-800 mt-1"><%= @product.nome %></h2>
        <p class="text-gray-600 mt-1"><%= @product.descricao %></p>
      </div>
      <div class="mt-4 sm:mt-0">
        <span class="text-3xl font-bold text-orange-700">R$ <%= number_to_currency(@product.preco, unit: "", separator: ",", delimiter: ".") %></span>
      </div>
    </div>
  <% end %>

  <%= form_with(model: @order, class: "contents") do |form| %>
    <%# Se houver um produto associado, enviamos o ID dele oculto %>
    <% if @product %>
      <%= form.hidden_field :product_id, value: @product.id %>
    <% end %>

    <% if @order.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3 border border-red-200 mb-6">
        <h2><%= pluralize(@order.errors.count, "erro") %> impediu(ram) o pedido de ser salvo:</h2>
        <ul class="list-disc ml-6">
          <% @order.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="bg-white shadow-md rounded-lg p-6 border border-gray-100">
      
      <div class="my-5">
        <%= form.label :cliente_nome, "Seu Nome Completo", class: "block font-medium text-gray-700 mb-1" %>
        <%= form.text_field :cliente_nome, placeholder: "Ex: Maria da Silva", class: "block shadow-sm rounded-md border px-3 py-2 w-full border-gray-300 focus:outline-none focus:border-orange-500 focus:ring-2 focus:ring-orange-500 focus:ring-offset-1 transition-colors" %>
      </div>

      <div class="my-5">
        <%= form.label :endereco, "Endereço de Entrega", class: "block font-medium text-gray-700 mb-1" %>
        <%= form.text_area :endereco, rows: 3, placeholder: "Rua, Número, Bairro e Complemento", class: "block shadow-sm rounded-md border px-3 py-2 w-full border-gray-300 focus:outline-none focus:border-orange-500 focus:ring-2 focus:ring-orange-500 focus:ring-offset-1 transition-colors" %>
      </div>

      <div class="my-5">
        <%= form.label :quantidade, "Quantos pacotes?", class: "block font-medium text-gray-700 mb-1" %>
        <%= form.number_field :quantidade, value: 1, min: 1, class: "block shadow-sm rounded-md border px-3 py-2 w-24 border-gray-300 focus:outline-none focus:border-orange-500 focus:ring-2 focus:ring-orange-500 focus:ring-offset-1 transition-colors font-bold text-lg text-center" %>
      </div>

      <div class="mt-8 pt-6 border-t border-gray-100">
        <%= form.submit "Confirmar Compra", class: "w-full rounded-md px-4 py-3 bg-orange-600 hover:bg-orange-700 text-white font-bold text-lg tracking-wide shadow-md hover:shadow-lg cursor-pointer transition-all duration-200 transform hover:-translate-y-0.5" %>
      </div>
    
    </div>
  <% end %>
  
  <div class="mt-4 text-center">
    <%= link_to "← Voltar para produtos", products_path, class: "text-orange-600 hover:text-orange-800 font-medium hover:underline" %>
  </div>
</div>
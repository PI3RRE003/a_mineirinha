<%# 
  CAMADA 1: O BACKGROUND (Fixo)
%>
<div 
  class="fixed inset-0 -z-10 bg-repeat"
  style="background-image: url('<%= asset_path('Background.png') %>'); background-size: 300px;"
>
</div>

<%# 
  CAMADA 2: O LAYOUT (Conteúdo Centralizado)
  - Adicionei 'min-h-screen' para centralizar verticalmente em qualquer dispositivo.
%>
<div class="min-h-screen w-full flex items-center justify-center p-4 ">

  <%# O CARD PRINCIPAL %>
  <main class="bg-amber-100 w-full max-w-sm rounded-[40px] px-6 py-10 flex flex-col items-center relative shadow-2xl border-4 border-white/50">
    
    <%# ÍCONE / LOGO %>
    <div class="mb-6 relative">
      <div class="w-32 h-32 rounded-full border-4 border-white p-1 flex items-center justify-center shadow-sm bg-white">
        <%= image_tag "Mineirinha.png", 
            class: "rounded-full w-full h-full object-cover", 
            alt: "Logo da Marca" 
        %>      
      </div>
    </div>

    <%# TEXTO DA MARCA %>
    <div class="mb-8 flex justify-center w-full">
      <%= image_tag "a_mineirinha.png", 
          class: "h-12 w-auto object-contain", 
          alt: "A Mineirinha" 
      %>
    </div>

    <%# FORMULÁRIO %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full flex flex-col gap-4" }) do |f| %>
      
      <%# Campo de Email %>
      <div class="relative group">
        <%= f.email_field :email, 
            autofocus: true, 
            autocomplete: "email",
            placeholder: "SEU EMAIL",
            class: "w-full py-4 px-6 rounded-full bg-transparent border-2 border-[#32491E] text-[#32491E] placeholder-[#32491E]/70 font-bold text-center text-sm outline-none focus:bg-white/20 focus:ring-2 focus:ring-[#32491E] focus:ring-offset-2 focus:ring-offset-amber-100 transition-all uppercase" 
        %>
      </div>

      <%# Campo de Senha %>
      <div class="relative group">
        <%= f.password_field :password, 
            autocomplete: "current-password",
            placeholder: "SUA SENHA",
            class: "w-full py-4 px-6 rounded-full bg-transparent border-2 border-[#32491E] text-[#32491E] placeholder-[#32491E]/70 font-bold text-center text-sm outline-none focus:bg-white/20 focus:ring-2 focus:ring-[#32491E] focus:ring-offset-2 focus:ring-offset-amber-100 transition-all uppercase" 
        %>
      </div>

      <%# Botão de Login %>
      <%= f.submit "ENTRAR", 
          class: "w-full mt-4 py-4 rounded-full bg-[#32491E] text-white font-bold text-sm uppercase tracking-wider hover:bg-[#263816] hover:scale-[1.02] transition-all active:scale-95 cursor-pointer border-none shadow-lg hover:shadow-xl" 
      %>

    <% end %>
    
    <%# LINKS DO RODAPÉ %>
    <div class="mt-8 text-center space-y-3">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Esqueci minha senha", new_password_path(resource_name), class: "block text-xs font-bold text-[#32491E] hover:underline opacity-80 uppercase tracking-wide" %>
      <% end %>

      <div class="h-px w-16 bg-[#32491E]/20 mx-auto my-2"></div>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to new_registration_path(resource_name), class: "inline-flex items-center gap-1 text-xs font-bold text-[#32491E] hover:text-orange-700 transition" do %>
          <span>Não tem conta?</span>
          <span class="underline">Crie agora</span>
        <% end %>
      <% end %>
    </div>

  </main>
</div>
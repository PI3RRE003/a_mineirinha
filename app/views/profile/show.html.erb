<div 
  class="fixed inset-0 -z-10 bg-repeat"
  style="background-image: url('<%= asset_path('Background.png') %>'); background-size: 300px;"
>
</div>

<%# Ajuste de Padding vertical: py-6 no mobile, py-12 no desktop %>
<div class="w-full py-6 md:py-12 px-4 sm:px-6 lg:px-8 font-sans">
  
  <div class="max-w-5xl mx-auto">
    
    <%# Bot√£o Voltar %>
    <div class="mb-6">
      <%= link_to root_path, class: "inline-flex items-center text-[#32491E] bg-amber-100 p-2 pr-4 rounded-full hover:text-orange-600 font-bold transition shadow-sm" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
        </svg>
        Voltar ao Card√°pio
      <% end %>
    </div>

    <%# GRID PRINCIPAL %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 items-start">
      
      <%# --- CARD 1: SEUS DADOS --- %>
      <div class="bg-amber-100 rounded-3xl md:rounded-[40px] shadow-2xl border-4 border-white overflow-hidden p-6 md:p-8 flex flex-col h-full">
        
        <h2 class="text-2xl md:text-3xl font-bold text-[#32491E] mb-6 flex items-center gap-3">
          <span class="bg-[#32491E] text-white p-2 rounded-xl shrink-0">
             <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" /></svg>
          </span>
          Seus Dados
        </h2>
        
        <div class="space-y-6 flex-1">
          <div>
            <label class="text-xs font-bold text-[#32491E] uppercase tracking-wider ml-1">Nome</label>
            <div class="bg-white p-4 rounded-2xl border border-stone-200 text-stone-800 font-medium shadow-sm mt-1 truncate">
               <%= @user.nome.presence || content_tag(:span, "N√£o informado", class: "text-stone-400 italic") %>
            </div>
          </div>
          
          <div>
            <label class="text-xs font-bold text-[#32491E] uppercase tracking-wider ml-1">Email</label>
            <div class="bg-white p-4 rounded-2xl border border-stone-200 text-stone-800 font-medium shadow-sm mt-1 truncate">
               <%= @user.email %>
            </div>
          </div>

          <div>
            <label class="text-xs font-bold text-[#32491E] uppercase tracking-wider ml-1">Telefone</label>
            <div class="bg-white p-4 rounded-2xl border border-stone-200 text-stone-800 font-medium shadow-sm mt-1">
               <%= @user.telefone.presence || content_tag(:span, "--", class: "text-stone-400 italic") %>
            </div>
          </div>

          <div>
            <label class="text-xs font-bold text-[#32491E] uppercase tracking-wider ml-1">Endere√ßo de Entrega</label>
            <div class="bg-white p-4 rounded-2xl border border-stone-200 text-stone-700 mt-1 shadow-sm min-h-[80px] break-words">
              <%= @user.endereco.presence || content_tag(:span, "Voc√™ ainda n√£o cadastrou um endere√ßo de entrega.", class: "text-stone-400 italic") %>
            </div>
          </div>
        </div>

        <div class="pt-8 mt-auto">
          <%= link_to edit_user_registration_path, class: "group w-full flex justify-center py-4 px-4 border border-transparent rounded-2xl shadow-lg shadow-green-900/10 text-lg font-bold text-white bg-[#32491E] hover:bg-green-900 transition transform hover:-translate-y-1 items-center gap-2 active:scale-95" do %>
            <span>Editar Meus Dados</span>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 group-hover:translate-x-1 transition"><path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" /></svg>
          <% end %>
        </div>
      </div>

      <%# --- CARD 2: CART√ÉO FIDELIDADE --- %>
      <div class="bg-white rounded-3xl md:rounded-[40px] shadow-2xl border-4 border-[#32491E] p-6 md:p-8 relative overflow-hidden h-full">
        
        <div class="absolute top-0 right-0 p-4 opacity-10 pointer-events-none">
            <span class="text-7xl md:text-9xl">üßÄ</span>
        </div>

        <div class="relative z-10">
            <h2 class="text-2xl md:text-3xl font-bold text-[#32491E] mb-2 text-center">Cart√£o Fidelidade</h2>
            <p class="text-center text-stone-500 mb-6 md:mb-8 font-medium text-sm md:text-base">Junte 10 queijos e ganhe uma surpresa!<br>500g de p√£o de queijo congelado üéÅ</p>
            
            <div class="bg-[#32491E] rounded-2xl md:rounded-3xl border-2 border-dashed border-[#32491E] p-4 md:p-6">
                <div class="grid grid-cols-5 gap-y-4 md:gap-y-6 gap-x-2 justify-items-center">
                <% (1..10).each do |i| %>
                    <% if i <= @pontos_atuais %>
                    <div class="w-10 h-10 sm:w-12 sm:h-12 md:w-14 md:h-14 bg-[#32491E] rounded-full flex items-center justify-center text-lg md:text-2xl shadow-lg shadow-orange-500/40 transform scale-110 transition border-2 md:border-4 border-white">üßÄ</div>
                    <% else %>
                    <div class="w-10 h-10 sm:w-12 sm:h-12 md:w-14 md:h-14 bg-white rounded-full flex items-center justify-center text-stone-300 font-bold border-2 border-stone-200 shadow-inner text-sm md:text-base"><%= i %></div>
                    <% end %>
                <% end %>
                </div>
            </div>

            <div class="mt-8 text-center">
                <% if @pontos_atuais == 0 %>
                    <p class="text-stone-500 py-2 text-sm md:text-base">Fa√ßa seu primeiro pedido para come√ßar a pontuar!</p>
                <% elsif @pontos_atuais == 10 %>
                    <div class="bg-green-100 border border-green-300 text-green-800 p-4 rounded-2xl font-bold animate-pulse shadow-sm">
                        <p class="text-lg md:text-xl mb-1">üéÅ PARAB√âNS!</p>
                        <span class="text-xs md:text-sm font-normal">Voc√™ completou o cart√£o! Mostre essa tela na pr√≥xima entrega para resgatar.</span>
                    </div>
                <% else %>
                    <p class="font-bold text-amber-100 text-sm md:text-lg bg-[#32491E] inline-block px-4 md:px-6 py-2 rounded-full">
                        Faltam apenas <%= 10 - @pontos_atuais %> pontos! üòã
                    </p>
                <% end %>
            </div>
        </div>
      </div>
    </div> 


    <%# --- SE√á√ÉO: HIST√ìRICO DE COMPRAS --- %>
    <div class="mt-8 md:mt-12 bg-white rounded-3xl md:rounded-[40px] shadow-2xl border-4 border-white overflow-hidden">
      
      <%# Cabe√ßalho da Se√ß√£o %>
      <div class="px-6 py-5 md:px-8 md:py-6 border-b border-stone-100 bg-amber-50 flex items-center gap-3">
         <span class="text-3xl">üìú</span>
         <h2 class="text-2xl md:text-3xl font-bold text-[#32491E]">Hist√≥rico de Compras</h2>
      </div>

      <div class="p-6 md:p-8">
        <% if @pedidos_antigos.present? && @pedidos_antigos.any? %>
          
          <div class="space-y-4">
            <% @pedidos_antigos.each do |pedido| %>
              
              <%# --- DESTAQUE PARA PEDIDO EM ANDAMENTO (Recebido) --- %>
              <% is_active = pedido.status.to_s.downcase == 'recebido' %>
              <% card_class = is_active ? "border-orange-300 bg-orange-50/20 shadow-md ring-2 ring-orange-100" : "border-stone-200 bg-white hover:border-orange-200" %>
              
              <div class="<%= card_class %> border rounded-2xl p-4 md:p-6 transition group relative overflow-hidden">
                
                <% if is_active %>
                   <div class="absolute top-0 right-0 bg-orange-400 text-white text-[10px] px-3 py-1 rounded-bl-xl font-bold shadow-sm z-10">
                     EM ANDAMENTO
                   </div>
                <% end %>

                <%# Topo do Card do Pedido %>
                <div class="flex flex-col md:flex-row justify-between md:items-center mb-4 gap-3 relative z-0">
                  <div>
                    <div class="flex items-center gap-2">
                      <span class="font-bold text-[#32491E] text-lg">Pedido #<%= pedido.id %></span>
                      <span class="text-xs text-stone-400 font-medium"><%= pedido.created_at.strftime("%d/%m/%Y √†s %H:%M") %></span>
                    </div>
                  </div>

                  <%# Badge de Status %>
                  <% 
                    cor_status = case pedido.status.to_s.downcase
                      when 'conclu√≠do', 'concluido' then 'bg-green-100 text-green-800 border-green-200'
                      when 'recebido' then 'bg-orange-100 text-orange-800 border-orange-200'
                      when 'cancelado' then 'bg-red-50 text-red-600 border-red-100 line-through'
                      else 'bg-blue-50 text-blue-600 border-blue-100'
                    end 
                  %>
                  <div class="self-start md:self-auto <%= 'mt-4 md:mt-0' if is_active %>">
                    <span class="px-3 py-1 rounded-full text-xs font-bold border <%= cor_status %> uppercase tracking-wider">
                      <%= pedido.status %>
                    </span>
                  </div>
                </div>

                <%# Lista de Itens (Resumida) %>
                <div class="bg-stone-50 rounded-xl p-3 md:p-4 mb-4">
                  <ul class="space-y-2">
                    <% pedido.order_items.each do |item| %>
                      <li class="flex justify-between items-center text-sm md:text-base text-stone-600">
                        <span>
                          <strong class="text-[#32491E]"><%= item.quantidade %>x</strong> <%= item.product.nome %>
                        </span>
                        <span class="text-stone-400 text-xs"><%= number_to_currency(item.preco_unitario * item.quantidade) %></span>
                      </li>
                    <% end %>
                  </ul>
                </div>

                <%# Rodap√© do Pedido %>
                <div class="flex items-center justify-between pt-2 border-t border-dashed border-stone-100">
                   
                   <%# Esquerda: Pagamento %>
                   <div class="flex items-center gap-2 text-xs md:text-sm font-bold text-stone-500">
                      <% if pedido.tipo_pagamento == 'Pix' %> 
                        <span>üí† Pix</span>
                      <% elsif pedido.tipo_pagamento&.include?('Cart√£o') %> 
                        <span>üí≥ Cart√£o</span>
                      <% else %> 
                        <span>üíµ Dinheiro</span>
                      <% end %>
                   </div>
                   
                   <%# Direita: Bot√£o Cancelar + Total %>
                   <div class="flex items-center gap-3 md:gap-4">
                      
                      <%# --- BOT√ÉO CANCELAR (Corrigido para cancelar_pedido_cliente_path) --- %>
                      <% if is_active %>
                        <%= button_to cancelar_pedido_cliente_path(pedido.id), method: :patch, data: { turbo_confirm: "Tem certeza que deseja cancelar este pedido?" }, class: "group flex items-center gap-1 text-xs font-bold text-red-400 hover:text-red-600 bg-white hover:bg-red-50 px-2 md:px-3 py-1.5 rounded-lg transition border border-red-100 shadow-sm" do %>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-3 h-3 md:w-4 md:h-4"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" /></svg>
                            <span class="hidden xs:inline">Cancelar</span>
                        <% end %>
                      <% end %>

                      <div class="text-right">
                        <span class="text-xs text-stone-400 mr-2">Total</span>
                        <span class="text-xl font-bold text-orange-600"><%= number_to_currency(pedido.total) %></span>
                      </div>
                   </div>

                </div>

              </div>
            <% end %>
          </div>

        <% else %>
          <%# Estado Vazio %>
          <div class="text-center py-12 md:py-16">
            <div class="text-6xl mb-4 grayscale opacity-30">üõí</div>
            <h3 class="text-xl font-bold text-stone-600">Nenhum pedido anterior</h3>
            <p class="text-stone-400 mb-6 text-sm md:text-base">Seus pedidos finalizados aparecer√£o aqui.</p>
            <%= link_to root_path, class: "bg-[#32491E] text-white px-6 py-3 rounded-2xl font-bold hover:bg-green-900 transition inline-flex items-center gap-2 shadow-lg shadow-green-900/10" do %>
               <span>Fazer meu primeiro pedido</span>
            <% end %>
          </div>
        <% end %>
      </div>

    </div>

  </div>
</div>
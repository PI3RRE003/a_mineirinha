<div 
  class="fixed inset-0 -z-10 bg-repeat"
  style="background-image: url('<%= asset_path('Background.png') %>'); background-size: 300px;"
>
</div>

<%# Overlay de Sucesso %>
<div id="success-overlay" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-white/90 backdrop-blur-sm animate-fade-in">
  <div class="text-center px-4">
    <div class="inline-flex items-center justify-center w-20 h-20 md:w-24 md:h-24 bg-green-100 rounded-full mb-4 animate-bounce">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 md:h-12 md:w-12 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
      </svg>
    </div>
    <h2 class="text-2xl md:text-3xl font-bold text-[#32491E] mb-2">Pedido Recebido!</h2>
    <p class="text-stone-600">Estamos te levando para o WhatsApp...</p>
  </div>
</div>

<div class="w-full py-6 md:py-8 px-3 sm:px-6 lg:px-8 font-sans">
  <div class="max-w-4xl mx-auto">
    
    <%# Bot√£o de Voltar %>
    <div class="mb-4 md:mb-6 flex justify-center md:justify-start">
      <%= link_to root_path, class: "inline-flex items-center text-[#32491E] bg-amber-100 rounded-full p-2 pr-4 hover:text-orange-600 font-bold transition shadow-sm text-sm md:text-base" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-4 h-4 md:w-5 md:h-5 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
        </svg>
        Continuar Comprando
      <% end %>
    </div>

    <%# CARD DO CARRINHO %>
    <div class="bg-amber-100 rounded-3xl md:rounded-[40px] shadow-2xl border-4 border-white overflow-hidden flex flex-col min-h-[400px] md:min-h-[500px]">
      
      <%# Cabe√ßalho %>
      <div class="px-5 py-4 md:px-8 md:py-6 border-b border-orange-200/50 bg-amber-50/80 flex flex-row justify-between items-center">
        <h1 class="text-xl md:text-3xl font-bold text-[#32491E] flex items-center gap-2">
          üõí <span class="hidden xs:inline">Seu</span> Carrinho
        </h1>
        <span class="bg-orange-100 text-orange-800 text-[10px] md:text-xs font-bold px-3 py-1 rounded-full text-center">
          <%= @order.order_items.sum(:quantidade) %> itens
        </span>
      </div>

      <%# Lista de Itens %>
      <div class="flex-1 p-3 md:p-8">
        <% if @order.order_items.any? %>
          <div class="space-y-4">
            <% @order.order_items.order(:created_at).each do |item| %>
              <div class="bg-white p-3 md:p-4 rounded-2xl md:rounded-3xl shadow-sm border border-stone-100 transition hover:shadow-md flex flex-col gap-3">
                <div class="flex gap-3 md:gap-4 items-center">
                  <div class="h-16 w-16 md:h-24 md:w-24 bg-stone-100 rounded-xl md:rounded-2xl overflow-hidden flex-shrink-0">
                     <% if item.product.imagem.attached? %>
                        <%= image_tag item.product.imagem.variant(resize_to_limit: [200, 200]), class: "h-full w-full object-cover" %>
                     <% else %>
                        <img src="https://placehold.co/150x150/FFF7ED/CA8A04?text=Queijo" alt="<%= item.product.nome %>" class="h-full w-full object-cover">
                     <% end %>
                  </div>

                  <div class="flex-1 min-w-0">
                    <div class="flex justify-between items-start">
                      <h3 class="font-bold text-[#32491E] text-sm md:text-xl leading-tight mb-1"><%= item.product.nome %></h3>
                      <span class="font-bold text-orange-600 text-xs md:text-lg whitespace-nowrap ml-2">
                        <%= number_to_currency(item.preco_unitario * item.quantidade) %>
                      </span>
                    </div>
                    <p class="text-[10px] md:text-sm text-stone-400 leading-relaxed line-clamp-2 mt-1">
                      <%= item.product.descricao.present? ? item.product.descricao : "Delicioso p√£o de queijo caseiro feito com ingredientes selecionados." %>
                    </p>
                  </div>
                </div>

                <div class="flex items-center justify-between pt-2 md:pt-3 border-t border-stone-100 border-dashed">
                  <div class="text-[10px] md:text-xs font-bold text-stone-400 uppercase tracking-wide">
                    Unit: <span class="text-stone-600"><%= number_to_currency(item.preco_unitario) %></span>
                  </div>
                  <div class="flex items-center gap-2 md:gap-3">
                    <div class="flex items-center gap-1 md:gap-2 bg-stone-100 rounded-lg p-1 border border-stone-200">
                      <%= button_to decrease_item_path(item.id), method: :post, class: "w-6 h-6 md:w-8 md:h-8 flex items-center justify-center bg-white rounded shadow-sm text-stone-500 hover:text-red-500 hover:bg-red-50 font-bold transition text-xs" do %>-<% end %>
                      <span class="font-bold text-stone-800 text-xs md:text-base w-5 md:w-6 text-center"><%= item.quantidade %></span>
                      <%= button_to increase_item_path(item.id), method: :post, class: "w-6 h-6 md:w-8 md:h-8 flex items-center justify-center bg-white rounded shadow-sm text-stone-500 hover:text-green-600 hover:bg-green-50 font-bold transition text-xs" do %>+<% end %>
                    </div>
                    <%= link_to remove_from_cart_path(item.id), data: { turbo_method: :delete }, class: "bg-red-50 p-1.5 md:p-2 rounded-lg text-red-400 hover:text-red-600 hover:bg-red-100 transition" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 md:w-5 md:h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="h-full flex flex-col items-center justify-center text-center py-12 md:py-20">
            <div class="text-4xl md:text-6xl mb-4 bg-white p-4 md:p-6 rounded-full shadow-sm">ü•£</div>
            <h2 class="text-lg md:text-2xl font-bold text-stone-700 px-4">Seu cesto est√° vazio!</h2>
            <div class="mt-6">
              <%= link_to "Ir para o Card√°pio", root_path, class: "bg-[#32491E] text-white px-8 py-3 rounded-2xl font-bold shadow-lg hover:bg-green-900 transition inline-block text-sm md:text-base" %>
            </div>
          </div>
        <% end %>
      </div>

      <%# √Årea de Checkout %>
      <% if @order.order_items.any? %>
        <div class="bg-white p-5 md:p-8 border-t border-stone-100">
          <%= form_with url: finalizar_pedido_path, method: :post, local: true, id: "form-finalizar", class: "flex flex-col md:flex-row gap-8 items-start" do |f| %>
            
            <%# Coluna Pagamento Alinhada %>
            <div class="w-full flex-1 space-y-4 text-center md:text-left">
              <h3 class="font-bold text-[#32491E] text-base md:text-lg mb-2">Como deseja pagar?</h3>
              
              <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 max-w-lg mx-auto md:mx-0">
                <% ["Pix", "Dinheiro", "Cart√£o de Cr√©dito", "Cart√£o de D√©bito"].each do |pag| %>
                  <label class="cursor-pointer">
                    <input type="radio" name="tipo_pagamento" value="<%= pag %>" class="peer sr-only" onchange="atualizarAvisos(this.value)" required>
                    <div class="h-full p-3 rounded-xl border-2 border-stone-100 bg-stone-50 peer-checked:border-green-500 peer-checked:bg-green-50 flex flex-col items-center justify-center gap-2 transition-all">
                      <span class="text-2xl"><%= pag == "Pix" ? "üí†" : (pag == "Dinheiro" ? "üíµ" : "üí≥") %></span>
                      <span class="font-bold text-[10px] md:text-xs text-stone-600 peer-checked:text-green-800"><%= pag.split.last %></span>
                    </div>
                  </label>
                <% end %>
              </div>

              <%# Containers Centralizados Mobile %>
              <div class="max-w-md mx-auto md:mx-0 space-y-4">
                <div id="campo_troco" class="hidden animate-fade-in-down">
                   <div class="bg-green-50 rounded-xl p-4 border border-green-100 flex items-center gap-4 text-left">
                      <div class="text-3xl">ü§ë</div>
                      <div class="flex-1">
                        <label class="block text-xs font-bold text-green-800 uppercase mb-1">Troco para quanto?</label>
                        <%= f.text_field :troco, class: "w-full rounded-lg bg-white border-green-200 p-2 text-sm", placeholder: "Ex: R$ 50,00" %>
                      </div>
                   </div>
                </div>

                <div id="taxa_credito" class="hidden animate-fade-in-down">
                   <div class="bg-orange-50 rounded-xl p-4 border border-orange-100 flex items-center gap-4 text-left">
                      <div class="text-3xl">‚ö†Ô∏è</div>
                      <div class="flex-1">
                        <label class="block text-xs font-bold text-orange-800 uppercase mb-1">Taxa (Cr√©dito)</label>
                        <p class="text-xs text-orange-700 font-medium">Acr√©scimo de 3,09%.</p>
                      </div>
                   </div>
                </div>
                
                <div id="taxa_debito" class="hidden animate-fade-in-down">
                   <div class="bg-orange-50 rounded-xl p-4 border border-orange-100 flex items-center gap-4 text-left">
                      <div class="text-3xl">‚ö†Ô∏è</div>
                      <div class="flex-1">
                        <label class="block text-xs font-bold text-orange-800 uppercase mb-1">Taxa (D√©bito)</label>
                        <p class="text-xs text-orange-700 font-medium">Acr√©scimo de 0,89%.</p>
                      </div>
                   </div>
                </div>

                <%# BLOCO DO PIX CENTRALIZADO %>
                <div id="info_pix" class="hidden animate-fade-in-down">
                  <div class="bg-white rounded-3xl p-6 border-2 border-amber-200 shadow-inner flex flex-col items-center gap-4 mx-auto md:mx-0">
                    <div class="text-center">
                      <span class="inline-block px-3 py-1 bg-green-100 text-green-800 text-[10px] font-bold uppercase tracking-wider rounded-full mb-2">
                        Pagamento Instant√¢neo
                      </span>
                    </div>
                    <div class="relative bg-white p-3 rounded-2xl shadow-sm border border-stone-100">
                      <img id="img-qrcode" 
                           src="https://quickchart.io/qr?text=<%= ERB::Util.url_encode(@order.pix_copia_e_cola) %>&size=250&margin=1" 
                           class="w-40 h-40 md:w-48 md:h-48 object-contain mx-auto rounded-lg" 
                           alt="QRCode Pix">
                    </div>
                    <div class="w-full space-y-2">
                      <label class="block text-[10px] font-extrabold text-[#32491E] uppercase tracking-widest text-center">Pix Copia e Cola</label>
                      <div class="flex flex-col sm:flex-row items-center gap-2 bg-stone-50 border-2 border-stone-100 rounded-2xl p-1.5 w-full">
                        <input type="text" id="chave-pix" value="<%= @order.pix_copia_e_cola %>" readonly 
                               class="bg-transparent border-none text-[10px] font-mono text-stone-600 focus:ring-0 flex-1 px-3 w-full text-center sm:text-left truncate">
                        <button type="button" onclick="copiarPix()" class="w-full sm:w-auto bg-[#32491E] text-white px-4 py-2 rounded-xl text-[10px] font-bold hover:bg-green-900 transition shadow-md">
                          COPIAR
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <%# Coluna Resumo %>
            <div class="w-full md:w-80 flex-shrink-0 flex flex-col gap-6 text-center md:text-left">
              <div class="bg-amber-50 rounded-2xl p-4 border border-amber-100 mx-auto w-full">
                <h3 class="text-xs font-bold text-[#32491E] uppercase mb-2">Entregar em:</h3>
                <p class="text-stone-700 font-medium text-sm"><%= current_user.endereco %></p>
                <%= link_to "Alterar", perfil_usuario_path, class: "text-xs text-orange-600 font-bold hover:underline" %>
              </div>

              <div class="flex items-center justify-between border-t border-dashed border-stone-200 pt-4 px-2">
                <span class="text-stone-500 font-medium text-sm md:text-base">Total</span>
                <span id="valor-total-exibicao" data-valor-original="<%= @order.calculate_base_total %>" class="text-2xl md:text-3xl font-extrabold text-[#32491E]">
                  <%= number_to_currency(@order.calculate_base_total) %>
                </span>
              </div>

              <button type="button" onclick="confirmarEViaZap()" 
                      class="w-full py-4 rounded-2xl font-bold text-white bg-[#32491E] hover:bg-green-900 shadow-xl transition transform hover:-translate-y-1 flex items-center justify-center gap-2 disabled:bg-stone-300 disabled:cursor-not-allowed">
                <span>Confirmar Pedido</span>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5 md:w-6 md:h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
                </svg>
              </button>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  // Esta fun√ß√£o precisa estar no objeto 'window' para o 'onchange' do HTML ach√°-la sempre
window.atualizarAvisos = function(pagamento) {
  const containers = {
    'Dinheiro': document.getElementById('campo_troco'),
    'Cart√£o de Cr√©dito': document.getElementById('taxa_credito'),
    'Cart√£o de D√©bito': document.getElementById('taxa_debito'),
    'Pix': document.getElementById('info_pix')
  };
  
  const totalElemento = document.getElementById('valor-total-exibicao');
  if (!totalElemento) return;

  const valorOriginal = parseFloat(totalElemento.dataset.valorOriginal);
  let valorFinal = valorOriginal;

  // Esconde todos os containers primeiro
  Object.values(containers).forEach(el => el?.classList.add('hidden'));

  // Calcula taxa baseada na sele√ß√£o
  if (pagamento === 'Cart√£o de Cr√©dito') {
    valorFinal = valorOriginal * 1.0309;
  } else if (pagamento === 'Cart√£o de D√©bito') {
    valorFinal = valorOriginal * 1.0089;
  }

  // Mostra o container selecionado
  if (containers[pagamento]) {
    containers[pagamento].classList.remove('hidden');
  }

  // Limpa o troco se n√£o for dinheiro
  if (pagamento !== 'Dinheiro') {
    const inputTroco = document.getElementById('campo_troco')?.querySelector('input');
    if (inputTroco) inputTroco.value = '';
  }

  // Atualiza o valor formatado na tela
  totalElemento.innerText = valorFinal.toLocaleString('pt-BR', { 
    style: 'currency', 
    currency: 'BRL' 
  });

  // Se for Pix, garante que o input tenha o valor correto vindo do Model
  if (pagamento === 'Pix') {
    const inputChave = document.getElementById("chave-pix");
    // Aqui usamos o valor gerado pelo servidor que j√° est√° no atributo value do HTML
    // O QRCode j√° foi gerado no carregamento da p√°gina via Ruby
  }
}
  

  // 2. Fun√ß√£o de Copiar a Chave
  window.copiarPix = function() {
    const inputChave = document.getElementById("chave-pix");
    const feedback = document.getElementById("feedback-copia");

    // Copia para a √°rea de transfer√™ncia
    navigator.clipboard.writeText(inputChave.value).then(() => {
      feedback.classList.remove('hidden');
      setTimeout(() => feedback.classList.add('hidden'), 3000);
      
      // Feedback visual no bot√£o tamb√©m
      const btn = event.target;
      const originalText = btn.innerText;
      btn.innerText = "PRONTO!";
      btn.classList.replace('bg-sky-600', 'bg-green-600');
      setTimeout(() => {
        btn.innerText = originalText;
        btn.classList.replace('bg-green-600', 'bg-sky-600');
      }, 2000);
    });
  }
  // Fun√ß√£o principal de envio
  window.confirmarEViaZap = async function() {
    const form = document.getElementById('form-finalizar');
    const pagamentoSelecionado = form.querySelector('input[name="tipo_pagamento"]:checked');

    if (!pagamentoSelecionado) {
      alert("Por favor, selecione uma forma de pagamento.");
      return;
    }

    const overlay = document.getElementById('success-overlay');
    overlay.classList.remove('hidden');

    const formData = new FormData(form);

    try {
      const response = await fetch(form.action, { 
        method: 'POST',
        headers: {
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
          'Accept': 'application/json'
        },
        body: formData
      });

      if (!response.ok) {
        const errorData = await response.json();
        throw new Error(errorData.error || "Erro no servidor");
      }

      const data = await response.json();

      if (data.url) {
        // Delay para o usu√°rio ver a anima√ß√£o de sucesso
        setTimeout(() => {
          window.location.href = data.url;
        }, 2000);
      } else {
        throw new Error("URL do WhatsApp n√£o recebida.");
      }

    } catch (error) {
      console.error("Erro:", error);
      overlay.classList.add('hidden');
      alert("Erro: " + error.message);
    }
  }
</script>
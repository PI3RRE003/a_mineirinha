<div class="w-full py-6 md:py-8 px-3 sm:px-6 lg:px-8 font-sans">
  
  <div class="max-w-4xl mx-auto">
    
    <%# BotÃ£o de Voltar %>
    <div class="mb-4 md:mb-6">
      <%= link_to root_path, class: "inline-flex items-center text-[#32491E] bg-amber-100 rounded-full p-2 pr-4 hover:text-orange-600 font-bold transition shadow-sm text-sm md:text-base" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-4 h-4 md:w-5 md:h-5 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
        </svg>
        Continuar Comprando
      <% end %>
    </div>

    <%# CARD DO CARRINHO %>
    <div class="bg-amber-100 rounded-3xl md:rounded-[40px] shadow-2xl border-4 border-white overflow-hidden flex flex-col min-h-[400px] md:min-h-[500px]">
      
      <%# CabeÃ§alho %>
      <div class="px-5 py-4 md:px-8 md:py-6 border-b border-orange-200/50 bg-amber-50/80 flex flex-row justify-between items-center">
        <h1 class="text-xl md:text-3xl font-bold text-[#32491E] flex items-center gap-2">
          ðŸ›’ <span class="hidden xs:inline">Seu</span> Carrinho
        </h1>
        <span class="bg-orange-100 text-orange-800 text-[10px] md:text-xs font-bold px-3 py-1 rounded-full">
          <%= @order.order_items.sum(:quantidade) %> itens
        </span>
      </div>

      <%# Lista de Itens %>
      <div class="flex-1 p-3 md:p-8">
        <% if @order.order_items.any? %>
          
          <div class="space-y-4">
            <% @order.order_items.order(:created_at).each do |item| %>
              
              <%# CARD DO ITEM %>
              <div class="bg-white p-3 md:p-4 rounded-2xl md:rounded-3xl shadow-sm border border-stone-100 transition hover:shadow-md flex flex-col gap-3">
                
                <%# PARTE DE CIMA: Imagem + Texto %>
                <div class="flex gap-3 md:gap-4">
                  
                  <%# 
                      IMAGEM REDUZIDA NO MOBILE:
                      - h-16 w-16 (64px) no mobile.
                      - md:h-24 md:w-24 (96px) no desktop.
                  %>
                  <div class="h-16 w-16 md:h-24 md:w-24 bg-stone-100 rounded-xl md:rounded-2xl overflow-hidden flex-shrink-0 self-center">
                     <% if item.product.imagem.attached? %>
                        <%= image_tag item.product.imagem.variant(resize_to_limit: [200, 200]), class: "h-full w-full object-cover" %>
                     <% else %>
                        <img src="https://placehold.co/150x150/FFF7ED/CA8A04?text=Queijo" alt="<%= item.product.nome %>" class="h-full w-full object-cover">
                     <% end %>
                  </div>

                  <%# Texto (Nome e DescriÃ§Ã£o) %>
                  <div class="flex-1 min-w-0 py-0.5 md:py-1">
                    <div class="flex justify-between items-start">
                      <%# Fonte um pouco menor no mobile (text-sm) para nÃ£o quebrar %>
                      <h3 class="font-bold text-[#32491E] text-sm md:text-xl leading-tight mb-1"><%= item.product.nome %></h3>
                      
                      <%# PreÃ§o Total do Item %>
                      <span class="font-bold text-orange-600 text-xs md:text-lg whitespace-nowrap ml-2">
                        <%= number_to_currency(item.preco_unitario * item.quantidade) %>
                      </span>
                    </div>

                    <p class="text-[10px] md:text-sm text-stone-400 leading-relaxed line-clamp-2 md:line-clamp-3 mt-1">
                      <%= item.product.descricao.present? ? item.product.descricao : "Delicioso pÃ£o de queijo caseiro feito com ingredientes selecionados." %>
                    </p>
                  </div>
                </div>

                <%# PARTE DE BAIXO: Controles e PreÃ§o UnitÃ¡rio %>
                <div class="flex items-center justify-between pt-2 md:pt-3 border-t border-stone-100 border-dashed">
                  
                  <%# Esquerda: PreÃ§o UnitÃ¡rio %>
                  <div class="text-[10px] md:text-xs font-bold text-stone-400 uppercase tracking-wide">
                    UnitÃ¡rio: <span class="text-stone-600"><%= number_to_currency(item.preco_unitario) %></span>
                  </div>

                  <%# Direita: BotÃµes +/- e Lixeira %>
                  <div class="flex items-center gap-2 md:gap-3">
                    
                    <%# Controlador de Quantidade %>
                    <div class="flex items-center gap-1 md:gap-2 bg-stone-100 rounded-lg p-1 border border-stone-200">
                      
                      <%= button_to decrease_item_path(item.id), method: :post, class: "w-6 h-6 md:w-8 md:h-8 flex items-center justify-center bg-white rounded shadow-sm text-stone-500 hover:text-red-500 hover:bg-red-50 font-bold transition text-xs" do %>
                        -
                      <% end %>

                      <span class="font-bold text-stone-800 text-xs md:text-base w-5 md:w-6 text-center"><%= item.quantidade %></span>

                      <%= button_to increase_item_path(item.id), method: :post, class: "w-6 h-6 md:w-8 md:h-8 flex items-center justify-center bg-white rounded shadow-sm text-stone-500 hover:text-green-600 hover:bg-green-50 font-bold transition text-xs" do %>
                        +
                      <% end %>
                    </div>

                    <%# BotÃ£o Remover %>
                    <%= link_to remove_from_cart_path(item.id), data: { turbo_method: :delete }, class: "bg-red-50 p-1.5 md:p-2 rounded-lg text-red-400 hover:text-red-600 hover:bg-red-100 transition", title: "Remover item" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 md:w-5 md:h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                      </svg>
                    <% end %>

                  </div>
                </div>

              </div>
            <% end %>
          </div>

        <% else %>
          <%# Carrinho Vazio %>
          <div class="h-full flex flex-col items-center justify-center text-center py-12 md:py-20">
            <div class="text-4xl md:text-6xl mb-4 bg-white p-4 md:p-6 rounded-full shadow-sm">ðŸ¥£</div>
            <h2 class="text-lg md:text-2xl font-bold text-stone-700">Seu cesto estÃ¡ vazio!</h2>
            <p class="text-stone-500 mt-2 max-w-xs mx-auto text-xs md:text-base px-4">Que tal encher de pÃ£o de queijo quentinho?</p>
            <div class="mt-6 md:mt-8">
              <%= link_to root_path, class: "bg-[#32491E] text-white px-6 md:px-8 py-3 rounded-2xl font-bold shadow-lg shadow-green-900/20 hover:bg-green-900 hover:-translate-y-1 transition transform inline-block text-sm md:text-base" do %>
                Ir para o CardÃ¡pio
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <%# Ãrea de Checkout %>
<%# Ãrea de Checkout %>
      <% if @order.order_items.any? %>
        <div class="bg-white p-5 md:p-8 border-t border-stone-100">
          
          <%= form_with url: finalizar_pedido_path, method: :post, local: true, class: "flex flex-col md:flex-row gap-8" do |f| %>
            
            <%# Coluna Pagamento %>
            <div class="flex-1 space-y-4">
              <h3 class="font-bold text-[#32491E] text-base md:text-lg mb-2">Como deseja pagar?</h3>
              
              <%# 
                 GRID INTELIGENTE:
                 - Mobile: grid-cols-2 (2 botÃµes lado a lado)
                 - Desktop: grid-cols-4 (todos em linha)
              %>
              <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                
                <%# OPÃ‡ÃƒO 1: PIX %>
                <label class="cursor-pointer group relative">
                  <input type="radio" name="tipo_pagamento" value="Pix" class="peer sr-only" onchange="toggleTroco(this.value)" required>
                  <div class="h-full p-3 rounded-xl border-2 border-stone-100 bg-stone-50 peer-checked:border-green-500 peer-checked:bg-green-50 flex flex-col items-center justify-center gap-2 hover:border-orange-200 transition-all text-center">
                    <span class="text-2xl">ðŸ’ </span>
                    <span class="font-bold text-xs md:text-sm text-stone-600 peer-checked:text-green-800">Pix</span>
                  </div>
                </label>

                <%# OPÃ‡ÃƒO 2: DINHEIRO (Ativa Troco) %>
                <label class="cursor-pointer group relative">
                  <input type="radio" name="tipo_pagamento" value="Dinheiro" class="peer sr-only" onchange="toggleTroco(this.value)">
                  <div class="h-full p-3 rounded-xl border-2 border-stone-100 bg-stone-50 peer-checked:border-green-500 peer-checked:bg-green-50 flex flex-col items-center justify-center gap-2 hover:border-orange-200 transition-all text-center">
                    <span class="text-2xl">ðŸ’µ</span>
                    <span class="font-bold text-xs md:text-sm text-stone-600 peer-checked:text-green-800">Dinheiro</span>
                  </div>
                </label>

                <%# OPÃ‡ÃƒO 3: CRÃ‰DITO %>
                <label class="cursor-pointer group relative">
                  <input type="radio" name="tipo_pagamento" value="CartÃ£o de CrÃ©dito" class="peer sr-only" onchange="toggleTroco(this.value)">
                  <div class="h-full p-3 rounded-xl border-2 border-stone-100 bg-stone-50 peer-checked:border-orange-500 peer-checked:bg-orange-50 flex flex-col items-center justify-center gap-2 hover:border-orange-200 transition-all text-center">
                    <span class="text-2xl">ðŸ’³</span>
                    <span class="font-bold text-xs md:text-sm text-stone-600 peer-checked:text-orange-800">CrÃ©dito</span>
                  </div>
                </label>

                <%# OPÃ‡ÃƒO 4: DÃ‰BITO %>
                <label class="cursor-pointer group relative">
                  <input type="radio" name="tipo_pagamento" value="CartÃ£o de DÃ©bito" class="peer sr-only" onchange="toggleTroco(this.value)">
                  <div class="h-full p-3 rounded-xl border-2 border-stone-100 bg-stone-50 peer-checked:border-orange-500 peer-checked:bg-orange-50 flex flex-col items-center justify-center gap-2 hover:border-orange-200 transition-all text-center">
                    <span class="text-2xl">ðŸ’³</span>
                    <span class="font-bold text-xs md:text-sm text-stone-600 peer-checked:text-orange-800">DÃ©bito</span>
                  </div>
                </label>


              </div>

              <%# CAMPO DE TROCO (SÃ³ aparece se escolher Dinheiro) %>
              <div id="campo_troco" class="hidden animate-fade-in-down mt-2">
                 <div class="bg-green-50 rounded-xl p-4 border border-green-100 flex items-center gap-4">
                    <div class="text-3xl">ðŸ¤‘</div>
                    <div class="flex-1">
                      <label class="block text-xs font-bold text-green-800 uppercase tracking-wider mb-1">Troco para quanto?</label>
                      <%= f.text_field :troco, class: "w-full rounded-lg bg-white border-green-200 focus:ring-2 focus:ring-green-500 focus:border-green-500 text-stone-700 placeholder-stone-400 p-2 text-sm", placeholder: "Ex: R$ 50,00" %>
                      <p class="text-[10px] text-green-600 mt-1">Deixe vazio se tiver o valor exato.</p>
                    </div>
                 </div>
              </div>
            </div>

            <%# Coluna Resumo (Direita) %>
            <div class="w-full md:w-80 flex-shrink-0 flex flex-col gap-5 md:gap-6">
              
              <div class="bg-amber-50 rounded-2xl p-4 border border-amber-100">
                <h3 class="text-xs font-bold text-[#32491E] uppercase tracking-wider mb-2">Entregar em:</h3>
                <% if current_user.endereco.present? %>
                  <p class="text-stone-700 font-medium text-xs md:text-sm leading-relaxed truncate">
                    <%= current_user.respond_to?(:endereco_completo) ? current_user.endereco_completo : current_user.endereco %>
                  </p>
                  <%= link_to "Alterar", perfil_usuario_path, class: "text-xs text-orange-600 font-bold hover:underline mt-2 inline-block" %>
                <% else %>
                  <div class="flex items-center gap-2 text-red-500 mb-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" /></svg>
                    <span class="font-bold text-xs">Falta o endereÃ§o!</span>
                  </div>
                  <%= link_to "Cadastrar Agora", perfil_usuario_path, class: "text-sm text-blue-600 underline font-medium" %>
                <% end %>
              </div>

              <div class="flex items-center justify-between border-t border-dashed border-stone-200 pt-4">
                <span class="text-stone-500 font-medium text-sm md:text-base">Total</span>
                <span class="text-2xl md:text-3xl font-extrabold text-[#32491E]">
                  <%= number_to_currency(@order.total) %>
                </span>
              </div>

              <button type="submit" class="w-full py-3 md:py-4 rounded-2xl text-base md:text-lg font-bold text-white bg-[#32491E] hover:bg-green-900 shadow-xl transition transform hover:-translate-y-1 flex justify-center items-center gap-2 cursor-pointer disabled:bg-stone-300 disabled:cursor-not-allowed disabled:shadow-none" <%= 'disabled' if current_user.endereco.blank? %>>
                <span>Confirmar Pedido</span>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5 md:w-6 md:h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" /></svg>
              </button>
            </div>
          <% end %>

        </div>
      <% end %>

<%# ATENÃ‡ÃƒO: MANTENHA O SCRIPT NO FINAL DO ARQUIVO %>
<script>
  function toggleTroco(pagamento) {
    const campoTroco = document.getElementById('campo_troco');
    // Verifica exatamente se o valor Ã© "Dinheiro"
    if (pagamento === 'Dinheiro') {
      campoTroco.classList.remove('hidden');
    } else {
      campoTroco.classList.add('hidden');
      const input = campoTroco.querySelector('input');
      if(input) input.value = '';
    }
  }
</script>